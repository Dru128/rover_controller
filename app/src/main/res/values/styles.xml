<?xml version="1.0" encoding="utf-8"?>
<resources
    xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="button_controller" parent="@style/Widget.AppCompat.ImageButton">
        <item name="android:layout_height">76dp</item>
        <item name="android:layout_width">76dp</item>
        <item name="android:background">@color/grey_4</item>
    </style>

    <style name="switch_controller" parent="@style/Widget.AppCompat.CompoundButton.Switch">
        <item name="colorControlActivated">@color/grey_1</item>
        <item name="background">@color/grey_5</item>
    </style>

    <style name="seekBar_controller">
        <item name="android:thumb">@drawable/thumb</item>
        <item name="android:progressDrawable">@color/grey_4.5</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/grey_4</item>
        <item name="android:max">200</item>
        <item name="android:progress">100</item>
    </style>
</resources>